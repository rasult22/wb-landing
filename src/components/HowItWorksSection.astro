---
const steps = [
  {
    number: '01',
    icon: 'telegram',
    title: 'Откройте бота в Telegram',
    description: 'Нажмите кнопку и перейдите в нашего Telegram-бота. Никаких регистраций — просто начните пользоваться.'
  },
  {
    number: '02',
    icon: 'menu',
    title: 'Выберите инструмент',
    description: 'Калькулятор, AI-карточки, SEO, склады — всё в одном удобном меню. Выберите то, что нужно прямо сейчас.'
  },
  {
    number: '03',
    icon: 'check',
    title: 'Получите результат',
    description: 'Расчёт маржинальности за секунду, готовая карточка — за 30 секунд. Быстро, точно, удобно.'
  }
];
---

<section class="section bg-slate-50/50 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid opacity-50"></div>

  <div class="container relative">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="badge mb-4">Как это работает</span>
      <h2 class="heading-section text-3xl md:text-4xl lg:text-5xl text-slate-900">
        Три простых шага к
        <span class="text-gradient">эффективным продажам</span>
      </h2>
    </div>

    <!-- Steps -->
    <div class="relative max-w-5xl mx-auto">
      <!-- Connection line -->
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 -translate-y-1/2">
        <div class="h-full bg-gradient-to-r from-brand-200 via-brand-400 to-brand-200 rounded-full"></div>
        <!-- Animated dots on line -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute top-1/2 -translate-y-1/2 w-3 h-3 bg-brand-500 rounded-full animate-pulse" style="left: 16.666%"></div>
          <div class="absolute top-1/2 -translate-y-1/2 w-3 h-3 bg-brand-500 rounded-full animate-pulse delay-300" style="left: 50%"></div>
          <div class="absolute top-1/2 -translate-y-1/2 w-3 h-3 bg-brand-500 rounded-full animate-pulse delay-500" style="left: 83.333%"></div>
        </div>
      </div>

      <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
        {steps.map((step, index) => (
          <div class={`relative animate-on-scroll delay-${(index + 1) * 100}`}>
            <!-- Step card -->
            <div class="card p-8 text-center relative z-10 h-full">
              <!-- Step number -->
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-br from-brand-600 to-brand-700 text-white font-display font-bold text-sm shadow-lg">
                  {step.number}
                </span>
              </div>

              <!-- Icon -->
              <div class="w-16 h-16 mx-auto mb-6 mt-4 rounded-2xl bg-gradient-to-br from-brand-50 to-white flex items-center justify-center shadow-soft border border-brand-100">
                {step.icon === 'telegram' && (
                  <svg class="w-8 h-8 text-brand-600" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69a.2.2 0 00-.05-.18c-.06-.05-.14-.03-.21-.02-.09.02-1.49.95-4.22 2.79-.4.27-.76.41-1.08.4-.36-.01-1.04-.2-1.55-.37-.63-.2-1.12-.31-1.08-.66.02-.18.27-.36.74-.55 2.92-1.27 4.86-2.11 5.83-2.51 2.78-1.16 3.35-1.36 3.73-1.36.08 0 .27.02.39.12.1.08.13.19.14.27-.01.06.01.24 0 .37z"/>
                  </svg>
                )}
                {step.icon === 'menu' && (
                  <svg class="w-8 h-8 text-brand-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                  </svg>
                )}
                {step.icon === 'check' && (
                  <svg class="w-8 h-8 text-brand-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
              </div>

              <h3 class="heading-section text-xl text-slate-900 mb-3">{step.title}</h3>
              <p class="text-slate-600">{step.description}</p>
            </div>

            <!-- Mobile connector -->
            {index < steps.length - 1 && (
              <div class="md:hidden flex justify-center my-4">
                <svg class="w-6 h-6 text-brand-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
