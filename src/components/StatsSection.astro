---
const stats = [
  { value: 5000, suffix: '+', label: 'Расчётов выполнено', color: 'brand' },
  { value: 2000, suffix: '+', label: 'Карточек сгенерировано', color: 'green' },
  { value: 500, suffix: '+', label: 'Активных продавцов', color: 'purple' },
  { value: 98, suffix: '%', label: 'Довольных клиентов', color: 'orange' }
];
---

<section id="demo" class="section bg-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-brand-100/50 via-transparent to-brand-50/30 rounded-full blur-3xl"></div>
  </div>

  <div class="container relative">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="badge mb-4">Результаты</span>
      <h2 class="heading-section text-3xl md:text-4xl lg:text-5xl text-slate-900">
        Цифры говорят
        <span class="text-gradient">сами за себя</span>
      </h2>
      <p class="text-lg text-slate-600 mt-4">
        Присоединяйтесь к сообществу успешных продавцов Wildberries
      </p>
    </div>

    <!-- Stats grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {stats.map((stat, index) => (
        <div class={`card p-6 lg:p-8 text-center animate-on-scroll delay-${(index + 1) * 100}`}>
          <div class="relative">
            <!-- Decorative ring -->
            <div class={`absolute inset-0 mx-auto w-24 h-24 rounded-full opacity-20 ${
              stat.color === 'brand' ? 'bg-brand-500' :
              stat.color === 'green' ? 'bg-green-500' :
              stat.color === 'purple' ? 'bg-purple-500' :
              'bg-orange-500'
            } blur-xl`}></div>

            <!-- Counter -->
            <div class={`relative font-display font-extrabold text-4xl lg:text-5xl mb-2 ${
              stat.color === 'brand' ? 'text-brand-600' :
              stat.color === 'green' ? 'text-green-600' :
              stat.color === 'purple' ? 'text-purple-600' :
              'text-orange-600'
            }`}>
              <span data-counter data-target={stat.value}>0</span>{stat.suffix}
            </div>
          </div>
          <p class="text-slate-600 font-medium">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Demo preview -->
    <div class="mt-20 animate-on-scroll">
      <div class="relative max-w-4xl mx-auto">
        <!-- Browser frame -->
        <div class="bg-slate-800 rounded-t-2xl p-4 flex items-center gap-2">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-400"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
            <div class="w-3 h-3 rounded-full bg-green-400"></div>
          </div>
          <div class="flex-1 mx-4">
            <div class="bg-slate-700 rounded-lg px-4 py-2 text-sm text-slate-400 text-center">
              t.me/wb_aihelper_bot
            </div>
          </div>
        </div>

        <!-- Content area -->
        <div class="bg-gradient-to-b from-slate-100 to-white rounded-b-2xl p-8 lg:p-12">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Calculator demo -->
            <div class="bg-white rounded-xl shadow-medium p-6 border border-slate-100">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-xl bg-green-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-display font-bold text-slate-800">Калькулятор</p>
                  <p class="text-xs text-slate-500">Юнит-экономика</p>
                </div>
              </div>
              <div class="space-y-3">
                <div class="flex justify-between text-sm">
                  <span class="text-slate-500">Цена продажи</span>
                  <span class="font-semibold text-slate-800">2 490 ₽</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-500">Себестоимость</span>
                  <span class="font-semibold text-slate-800">850 ₽</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-slate-500">Комиссия WB</span>
                  <span class="font-semibold text-slate-800">373 ₽</span>
                </div>
                <div class="h-px bg-slate-100"></div>
                <div class="flex justify-between">
                  <span class="text-green-600 font-medium">Чистая прибыль</span>
                  <span class="font-display font-bold text-green-600">487 ₽</span>
                </div>
              </div>
            </div>

            <!-- AI Cards demo -->
            <div class="bg-white rounded-xl shadow-medium p-6 border border-slate-100">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-xl bg-brand-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-display font-bold text-slate-800">AI Карточки</p>
                  <p class="text-xs text-slate-500">Инфографика</p>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-3">
                <div class="aspect-[3/4] rounded-lg bg-gradient-to-br from-brand-100 to-brand-200 flex items-center justify-center">
                  <svg class="w-8 h-8 text-brand-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
                  </svg>
                </div>
                <div class="aspect-[3/4] rounded-lg bg-gradient-to-br from-pink-100 to-pink-200 flex items-center justify-center">
                  <svg class="w-8 h-8 text-pink-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/>
                  </svg>
                </div>
              </div>
              <div class="mt-4 flex items-center justify-between">
                <span class="text-sm text-slate-500">Генерация...</span>
                <div class="flex gap-1">
                  <div class="w-2 h-2 rounded-full bg-brand-500 animate-pulse"></div>
                  <div class="w-2 h-2 rounded-full bg-brand-500 animate-pulse delay-100"></div>
                  <div class="w-2 h-2 rounded-full bg-brand-500 animate-pulse delay-200"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
